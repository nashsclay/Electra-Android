<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_intro_set_pit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.breadwallet.presenter.activities.settings.AboutActivity">


    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_arrow_left"
        app:layout_constraintLeft_toLeftOf="@+id/divider4"
        app:layout_constraintTop_toTopOf="@id/title" />


    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/brd_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="40dp"
        android:text="@string/About.walletID"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/divider4"
        app:layout_constraintLeft_toLeftOf="@id/divider4" />


    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:background="@color/extra_light_gray"
        app:layout_constraintBottom_toTopOf="@+id/textView24"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <ImageView
        android:id="@+id/brd_logo"
        android:layout_width="264dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:src="@drawable/eca_white"
        android:textColor="@color/white"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintTop_toTopOf="parent" />

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/About.title"
        android:textSize="@dimen/header"
        app:brdFont="@string/Font.CircularPro_Bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:background="@color/extra_light_gray"
        app:layout_constraintBottom_toTopOf="@+id/policy_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:background="@color/extra_light_gray"
        app:layout_constraintBottom_toTopOf="@+id/textView21"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/view5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:background="@color/extra_light_gray"
        app:layout_constraintBottom_toTopOf="@+id/textView22"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="40dp"
        android:text="@string/About.twitter"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintLeft_toLeftOf="@+id/divider1" />

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="24dp"
        android:text="@string/About.blog"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/view5"
        app:layout_constraintLeft_toLeftOf="@+id/divider1" />

    <ImageView
        android:id="@+id/twitter_share_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:src="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintTop_toBottomOf="@+id/view5"/>

    <ImageView
        android:id="@+id/twitter_share_button1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/twitter"
        app:layout_constraintLeft_toLeftOf="@+id/divider4"
        app:layout_constraintBottom_toBottomOf="@+id/textView22"
        app:layout_constraintTop_toTopOf="@+id/textView22" />

    <ImageView
        android:id="@+id/discord_share_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:src="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintTop_toBottomOf="@+id/divider4"/>

    <ImageView
        android:id="@+id/discord_share_button1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/discord"
        app:layout_constraintBottom_toBottomOf="@+id/textView24"
        app:layout_constraintTop_toTopOf="@+id/textView24"
        app:layout_constraintLeft_toLeftOf="@+id/divider4"
        app:layout_constraintVertical_bias="0.0" />


    <View
        android:id="@+id/divider5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/brd_website"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/website_share_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:src="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/divider4"
        app:layout_constraintTop_toBottomOf="@+id/divider5"/>

    <ImageView
        android:id="@+id/website_share_button1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/website"
        app:layout_constraintLeft_toLeftOf="@+id/divider4"
        app:layout_constraintBottom_toBottomOf="@+id/brd_website"
        app:layout_constraintTop_toTopOf="@+id/brd_website"
        app:layout_constraintVertical_bias="0.0" />

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/policy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:alpha="0.8"
        android:text="@string/About.privacy"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/info_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="40dp"
        android:text="@string/About.footer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="40dp"
        android:text="@string/About.reddit"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/divider1"
        app:layout_constraintLeft_toLeftOf="@+id/divider1" />

    <ImageView
        android:id="@+id/telegram_share_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:src="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/view4"/>

    <ImageView
        android:id="@+id/telegram_share_button1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/telegram"
        app:layout_constraintLeft_toLeftOf="@+id/divider4"
        app:layout_constraintBottom_toBottomOf="@+id/textView21"
        app:layout_constraintTop_toTopOf="@+id/textView21" />

</android.support.constraint.ConstraintLayout>
